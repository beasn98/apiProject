<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_playerItem_pfp"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toEndOf="@+id/textView_playerItem_standing"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_playerItem_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_playerItem_pfp"
        app:layout_constraintTop_toTopOf="@+id/imageView_playerItem_pfp"
        tools:text="czsmall0402" />

    <TextView
        android:id="@+id/textView_playerItem_standing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_playerItem_pfp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#1" />

    <ImageView
        android:id="@+id/imageView_playerItem_rank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_playerItem_pfp"
        app:layout_constraintTop_toBottomOf="@+id/textView_playerItem_username"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>